{
  "kind": "collectionType",
  "collectionName": "quizzes",
  "info": {
    "singularName": "quizze",
    "pluralName": "quizzes",
    "displayName": "Quizzes"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "instructions": {
      "type": "text"
    },
    "time_limit_minutes": {
      "type": "integer"
    },
    "max_attempts": {
      "type": "integer",
      "required": true
    },
    "cooldown_hours": {
      "type": "integer",
      "required": true,
      "default": 24
    },
    "is_active": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "course": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course.course"
    }
  }
}
