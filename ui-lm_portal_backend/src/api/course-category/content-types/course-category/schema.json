{
  "kind": "collectionType",
  "collectionName": "course_categories",
  "info": {
    "singularName": "course-category",
    "pluralName": "course-categories",
    "displayName": "Course_categories "
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "icon": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "display_order": {
      "type": "integer",
      "required": true,
      "default": 0
    },
    "is_active": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "parent_category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course-category.course-category"
    },
    "description": {
      "type": "text"
    }
  }
}
