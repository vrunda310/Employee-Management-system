{
  "kind": "collectionType",
  "collectionName": "unit_locations",
  "info": {
    "singularName": "unit-location",
    "pluralName": "unit-locations",
    "displayName": "Unit_locations"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "text",
      "required": true
    },
    "contact": {
      "type": "string",
      "required": true
    },
    "alternative_contact": {
      "type": "string"
    },
    "map_snapshot": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "emergency_gate_images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "is_active": {
      "type": "boolean",
      "required": true
    },
    "location_created_at": {
      "type": "datetime",
      "required": true
    },
    "location_updated_at": {
      "type": "datetime",
      "required": true
    },
    "area": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::area.area"
     
    },
    "company": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::company.company"
    },
    "departments": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::department.department"
    }
  }
}
