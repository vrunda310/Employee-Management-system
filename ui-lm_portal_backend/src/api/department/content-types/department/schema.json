{
  "kind": "collectionType",
  "collectionName": "departments",
  "info": {
    "singularName": "department",
    "pluralName": "departments",
    "displayName": "Department"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "designations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::designation.designation",
      "mappedBy": "department"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "department_code": {
      "type": "string",
      "required": false
    },
    "description": {
      "type": "text"
    },
    "is_active": {
      "type": "boolean",
      "required": true
    },
    "department_created_at": {
      "type": "datetime",
      "required": true
    },
    "department_updated_at": {
      "type": "datetime",
      "required": true
    },
    "company": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::company.company"
    }
  }
}
