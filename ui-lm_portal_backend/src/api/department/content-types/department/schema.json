{
  "kind": "collectionType",
  "collectionName": "departments",
  "info": {
    "singularName": "department",
    "pluralName": "departments",
    "displayName": "Department"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "department_code": {
      "type": "string",
      "required": false
    },
    "description": {
      "type": "text"
    },
    "is_active": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "company": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::company.company"
    },
    "unit_locations": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::unit-location.unit-location"
    }
  }
}
