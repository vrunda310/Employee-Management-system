{
  "kind": "collectionType",
  "collectionName": "notifications",
  "info": {
    "singularName": "notification",
    "pluralName": "notifications",
    "displayName": "Notifications"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "type": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Course_assigned",
        "Quiz_passed",
        "Quiz_failed",
        "Certificate_issued",
        "Due_date_reminder"
      ]
    },
    "title": {
      "type": "string",
      "required": true
    },
    "message": {
      "type": "text",
      "required": true
    },
    "link": {
      "type": "string"
    },
    "is_read": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "sent_via_email": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}
