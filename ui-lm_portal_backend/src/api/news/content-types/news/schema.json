{
  "kind": "collectionType",
  "collectionName": "news_items",
  "info": {
    "singularName": "news",
    "pluralName": "news-items",
    "displayName": "News"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "published_date": {
      "type": "datetime",
      "required": true
    },
    "company": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "AIA",
        "Vega"
      ]
    },
    "is_active": {
      "type": "boolean",
      "required": true
    },
    "is_featured": {
      "type": "boolean",
      "required": true
    },
    "news_created_at": {
      "type": "datetime",
      "required": true
    },
    "news_updated_at": {
      "type": "datetime",
      "required": true
    },
    "news_category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::news-category.news-category",
      "inversedBy": "news"
    }
  }
}
