{
  "kind": "collectionType",
  "collectionName": "holidays",
  "info": {
    "singularName": "holiday",
    "pluralName": "holidays",
    "displayName": "Holidays"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "is_active": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "is_optional": {
      "type": "boolean",
      "required": false
    },
    "description": {
      "type": "text",
      "required": true
    },
    "city": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::city.city",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "holiday_applied_at"
            },
            "City"
          ]
        }
      }
    },
    "unit_location": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::unit-location.unit-location",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "holiday_applied_at"
            },
            "Unit_location"
          ]
        }
      }
    },
    "area": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::area.area",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "holiday_applied_at"
            },
            "Area"
          ]
        }
      }
    },
    "company": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::company.company",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "holiday_for"
            },
            "Company"
          ]
        }
      }
    },
    "departments": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::department.department",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "holiday_for"
            },
            "Department"
          ]
        }
      }
    },
    "holiday_for": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "All",
        "Unit_location",
        "Area",
        "City",
        "Department",
        "Company"
      ]
    }
  }
}
