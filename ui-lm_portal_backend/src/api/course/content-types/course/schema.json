{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Courses"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "blocks",
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "duration_hours": {
      "type": "integer",
      "required": true
    },
    "difficulty_level": {
      "type": "enumeration",
      "required": false,
      "enum": [
        "Beginner",
        "Intermediate",
        "Advanced"
      ]
    },
    "is_active": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "passing_score": {
      "type": "integer",
      "required": true
    },
    "course_category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course-category.course-category"
    },
    "prerequisite_courses": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::course.course"
    },
    "company": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::company.company"
    },
    "is_mandatory": {
      "type": "boolean",
      "required": true
    },
    "is_orientation_course": {
      "type": "boolean",
      "required": true
    },
    "is_optional": {
      "type": "boolean",
      "required": true
    }
  }
}
