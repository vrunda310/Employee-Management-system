{
  "kind": "collectionType",
  "collectionName": "course_modules",
  "info": {
    "singularName": "course-module",
    "pluralName": "course-modules",
    "displayName": "Course_modules"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "course": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course.course"
    },
    "order": {
      "type": "integer",
      "required": true
    },
    "module_content_type": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Video",
        "Pdf",
        "Scorm",
        "Text"
      ]
    },
    "video_file": {
      "type": "media",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "module_content_type"
            },
            "Video"
          ]
        }
      },
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "pdf_file": {
      "type": "media",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "module_content_type"
            },
            "Pdf"
          ]
        }
      },
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "text_content": {
      "type": "blocks",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "module_content_type"
            },
            "Text"
          ]
        }
      },
      "required": true
    },
    "duration_minutes": {
      "type": "integer",
      "required": true
    },
    "description": {
      "type": "text"
    }
  }
}
