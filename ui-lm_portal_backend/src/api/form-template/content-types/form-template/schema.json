{
  "kind": "collectionType",
  "collectionName": "form_templates",
  "info": {
    "singularName": "form-template",
    "pluralName": "form-templates",
    "displayName": "Form_templates"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "form_type": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "PDF",
        "URL"
      ]
    },
    "form_pdf": {
      "type": "media",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "form_type"
            },
            "PDF"
          ]
        }
      },
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "is_downloadable": {
      "type": "boolean",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "form_type"
            },
            "PDF"
          ]
        }
      },
      "required": true,
      "default": false
    },
    "form_url": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "form_type"
            },
            "URL"
          ]
        }
      },
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "is_active": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "company": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::company.company"
    }
  }
}
