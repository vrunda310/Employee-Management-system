{
  "kind": "collectionType",
  "collectionName": "companies",
  "info": {
    "singularName": "company",
    "pluralName": "companies",
    "displayName": "Company"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "company_overview": {
      "type": "text"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "website": {
      "type": "string",
      "required": true
    },
    "company_mail": {
      "type": "email"
    },
    "phone": {
      "type": "string"
    },
    "address": {
      "type": "text",
      "required": true
    },
    "is_active": {
      "type": "boolean",
      "required": true
    },
    "company_created_at": {
      "type": "datetime",
      "required": true
    },
    "company_updated_at": {
      "type": "datetime",
      "required": true
    },
    "company_type": {
      "type": "string",
      "required": true
    },
    "users": {
      "type": "relation",
      "relation": "oneToMany",
