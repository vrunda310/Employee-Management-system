{
  "kind": "collectionType",
  "collectionName": "course_assignments",
  "info": {
    "singularName": "course-assignment",
    "pluralName": "course-assignments",
    "displayName": "Course_assignments "
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "assignment_target_type": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Department",
        "Location",
        "Role",
        "Individual"
      ]
    },
    "completion_date": {
      "type": "date",
      "required": true
    },
    "is_active": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "assigned_by": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "course": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course.course"
    },
    "departments": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::department.department",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "assignment_target_type"
            },
            "Department"
          ]
        }
      }
    },
    "individual_user": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "assignment_target_type"
            },
            "Individual"
          ]
        }
      }
    },
    "unit_locations": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::unit-location.unit-location",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "assignment_target_type"
            },
            "Location"
          ]
        }
      }
    },
    "role": {
      "type": "enumeration",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "assignment_target_type"
            },
            "Role"
          ]
        }
      },
      "required": true,
      "enum": [
        "Hr",
        "LearningManager",
        "Employee"
      ]
    }
  }
}
